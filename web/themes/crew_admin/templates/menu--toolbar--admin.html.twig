{#
/**
 * @file
 * Default theme implementation to display a toolbar menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 *
 * @ingroup themeable
 */
#}


{% if logged_in %}
  {% if 'school_developer' not in user.getRoles and 'administrator' not in user.getRoles %}
    {% set mainnav %}
      <li class="menu-item"><a class='toolbar-icon toolbar-icon-system-admin-structure' href="{{ base_url }}/admin/structure/menu/manage/main">Main Navigation Menu</a></li>
      {% if 'gfr' in base_url or 'gcr' in base_url %}
        <li class="menu-item"><a class='toolbar-icon toolbar-icon-system-admin-structure' href="{{ base_url }}/admin/structure/webform/manage/nac_application/results/submissions">NAC Application Submissions</a></li>
      {% endif %}
      {% if 'thinkbox' in base_url %}
        <li class="menu-item"><a class='toolbar-icon toolbar-icon-system-admin-structure' href="{{ base_url }}/admin/structure/webform/submissions/manage">RFI Submissions</a></li>
      {% endif %}
      {% if 'registrar' in base_url %}
        <li class="menu-item"><a class='toolbar-icon toolbar-icon-system-admin-structure' href="{{ base_url }}/admin/structure/webform">Webform Submissions</a></li>
      {% endif %}
      {% if 'chslibrary' in base_url %}
        <li class="menu-item"><a class='toolbar-icon toolbar-icon-system-admin-structure' href="{{ base_url }}/admin/structure/webform/manage/chsl_payment/results/submissions">CHSL Payment Submissions</a></li>
      {% endif %}
    {% endset %}
  {% endif %}
{% endif %}



{% import _self as menus %}

{#
  We call a macro which calls itself to render the full tree.
  @see http://twig.sensiolabs.org/doc/tags/macro.html
#}
{{ menus.menu_links(items, attributes, 0, mainnav) }}


{% macro menu_links(items, attributes, menu_level, mainnav) %}



 {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
      <ul{{ attributes.addClass('toolbar-menu') }}>
    {% else %}
      <ul class="toolbar-menu">
    {% endif %}
    {% for item in items %}
      {%
        set classes = [
          'menu-item',
          item.is_expanded ? 'menu-item--expanded',
          item.is_collapsed ? 'menu-item--collapsed',
          item.in_active_trail ? 'menu-item--active-trail',
        ]
      %}
      <li{{ item.attributes.addClass(classes) }}>
        {{ link(item.title, item.url) }}
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}

    {# print Main Navigation Menu for more restricted roles #}
      {% if mainnav %}
         {{ mainnav }}
      {% endif %}

    </ul>
  {% endif %}


{% endmacro %}
