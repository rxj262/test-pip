{{ attach_library('crew_president/news-feed') }}
{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 *   Only method names starting with "get", "has", or "is" and a few common
 *   methods such as "id", "label", and "bundle" are available. For example:
 *   - paragraph.getCreatedTime() will return the paragraph creation timestamp.
 *   - paragraph.id(): The paragraph ID.
 *   - paragraph.bundle(): The type of the paragraph, for example, "image" or "text".
 *   - paragraph.getOwnerId(): The user ID of the paragraph author.
 *   See Drupal\paragraphs\Entity\Paragraph for a full list of public properties
 *   and methods for the paragraph object.
 * - content: All paragraph items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given child element.
 * - attributes: HTML attributes for the containing element.
 *   The attributes.class element may contain one or more of the following
 *   classes:
 *   - paragraphs: The current template type (also known as a "theming hook").
 *   - paragraphs--type-[type]: The current paragraphs type. For example, if the paragraph is an
 *     "Image" it would result in "paragraphs--type--image". Note that the machine
 *     name will often be in a short form of the human readable label.
 *   - paragraphs--view-mode--[view_mode]: The View Mode of the paragraph; for example, a
 *     preview would result in: "paragraphs--view-mode--preview", and
 *     default: "paragraphs--view-mode--default".
 * - view_mode: View mode; for example, "preview" or "full".
 * - logged_in: Flag for authenticated user status. Will be true when the
 *   current user is a logged-in member.
 * - is_admin: Flag for admin user status. Will be true when the current user
 *   is an administrator.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}
{%
    set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    'portlet-body',
    'container'
]
%}

{% if content.field_external_rss_button.0['#title'] and content.field_external_rss_button.0['#url'].uri is not defined %}
	{% set flex_classes = '' %}
{% else %}
	{% set flex_classes = 'flex flex-col height-100' %}
{% endif %}

{%
    set type, count, feedcount = content.field_external_rss_type['#items'].value,
    content.field_external_rss_items_to_disp.0['#markup'] - 1,
    content.rss|length - 1
%}

{% block paragraph %}
	<div{{attributes.addClass(classes,flex_classes)}}>
		{% block content %}
			{% if content.field_external_rss_news_type['#items'].value is null or content.field_external_rss_news_type['#items'].value == 'events' %}
				{# print sectional title if set #}
				{% if content.field_external_rss_title.0['#context'].value %}
					<div class='rss-section-title'>{{ content.field_external_rss_title.0['#context'].value }}</div>
				{% endif %}

				{# print this if type is gcal #}
				{% if type == 'gcal' and content.field_external_rss_gcal %}
					<div class='gCalFlow flex-1' data-gcalid="{{ content.field_external_rss_gcal.0['#context'].value }}" data-amount="{{ content.field_external_rss_items_to_disp.0['#markup'] }}">
						<div class='gcf-item-container-block'>
							<div class='gcf-item-block'>
								<div class='gcf-item-header-block'>
									<div class='gcf-item-date-block'>
										<div class='gcf-item-daterange'></div>
									</div>
									<div class='gcf-item-title-block'>
										<div class='gcf-item-title'></div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<script type="text/javascript" src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
					<script type='text/javascript'>
						var jQuery_2_2_4 = jQuery.noConflict();
					</script>
					<script>
						(function ($) {
$(document).on('ready', function () {

$('.gCalFlow').each(function (index) {
var gcalid = $(this).data('gcalid'),
amount = $(this).data('amount');

$(this).gCalFlow({
calid: gcalid,
maxitem: amount,
no_items_html: '<p class="no-events">no events found...</p>',
apikey: 'AIzaSyCd-P9Id38F0PXecOoAw59iUYRkzcA5MNY', // From Cheng's Google API account, the Google Calendar API has a courtesy limit of 1,000,000 queries per day.
});
});
});
})(jQuery_2_2_4);
					</script>
					<script type="text/javascript" src="https://case.edu/js/drupal/globalize.min.js"></script>
					<script type="text/javascript" src="https://case.edu/js/drupal/jquery.gcal_flow.js"></script>

				{% endif %}
				{# print this if type is theDaily or mailchimp #}
				{% if (type == 'd8' or type == 'daily' or type == 'mailchimp' or type == 'learningstream' or type == 'rawrss') %}
					{% if content.rss is null %}
						<p>No events available at this time...</p>
					{% else %}
						<div class='feed-container flex'>
								{% for i in 0..min(count, feedcount) %}
                  <a hreflang="en" href={{ content.rss[i].link }} class="feed-item-anchor">
                    <div class='feed-item-block'>
                      <div>
                        {% if content.rss[i].eventmonth and content.rss[i].eventday %}
                          <div class='feed-item-daterange'>
                            <span class='month'>{{ content.rss[i].eventmonth }}</span>
                            <span class='day'>{{ content.rss[i].eventday }}</span>
                          </div>
                        {% else %}
                          <div class='feed-item-daterange'>
                            <span class="feed-date-underline">
                              <span class='month'>{{ content.rss[i].month|date('F') }}</span>
                              <span class='day'>{{ content.rss[i].day }}</span>
                            </span>
                          </div>
                        {% endif %}
                      </div>
                      <div>
                        <div class="feed-item-title">{{ content.rss[i].title }}</div>
                        {% if content.rss[i].groupname %}
                          <div>{{ content.rss[i].groupname }}</div>
                        {% endif %}
                        {% if content.rss[i].eventtime %}
                          <span>{{ content.rss[i].eventtime }}</span>
                        {% endif %}
                      </div>
                    </div>
                  </a>
								{% endfor %}
						</div>
					{% endif %}
				{% endif %}

				{# print button if it has values #}
				{% if content.field_external_rss_button.0['#title'] %}
					{% if content.field_external_rss_button.0['#url'].uri is not defined %}
						{{ link(content.field_external_rss_button.0['#title'],
                          content.field_external_rss_button.0['#url'].uri,
                          { 'class':['btn', 'blue'], 'target':['_blank']} )
                      }}
					{% else %}
						<div class="field--name-field-subfeature-link">
							<a href={{content.field_external_rss_button.0['#url_title']}}>{{content.field_external_rss_button.0['#title']}}</a>
						</div>
					{% endif %}
				{% endif %}

			{% elseif content.field_external_rss_news_type['#items'].value is defined and content.field_external_rss_news_type['#items'].value == 'news' %}
				<div class='feed-news'>{{ content.rss }}</div>
			{% endif %}

		{% endblock %}

	</div>
{% endblock paragraph %}
