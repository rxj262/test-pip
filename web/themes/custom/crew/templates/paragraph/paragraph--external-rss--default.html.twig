{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 *   Only method names starting with "get", "has", or "is" and a few common
 *   methods such as "id", "label", and "bundle" are available. For example:
 *   - paragraph.getCreatedTime() will return the paragraph creation timestamp.
 *   - paragraph.id(): The paragraph ID.
 *   - paragraph.bundle(): The type of the paragraph, for example, "image" or "text".
 *   - paragraph.getOwnerId(): The user ID of the paragraph author.
 *   See Drupal\paragraphs\Entity\Paragraph for a full list of public properties
 *   and methods for the paragraph object.
 * - content: All paragraph items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given child element.
 * - attributes: HTML attributes for the containing element.
 *   The attributes.class element may contain one or more of the following
 *   classes:
 *   - paragraphs: The current template type (also known as a "theming hook").
 *   - paragraphs--type-[type]: The current paragraphs type. For example, if the paragraph is an
 *     "Image" it would result in "paragraphs--type--image". Note that the machine
 *     name will often be in a short form of the human readable label.
 *   - paragraphs--view-mode--[view_mode]: The View Mode of the paragraph; for example, a
 *     preview would result in: "paragraphs--view-mode--preview", and
 *     default: "paragraphs--view-mode--default".
 * - view_mode: View mode; for example, "preview" or "full".
 * - logged_in: Flag for authenticated user status. Will be true when the
 *   current user is a logged-in member.
 * - is_admin: Flag for admin user status. Will be true when the current user
 *   is an administrator.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}
{%
    set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    'portlet-body'
]
%}

{% if content.field_external_rss_button.0['#title'] and content.field_external_rss_button.0['#url'].uri is not defined %}
    {% set flex_classes = '' %}
{% else %}
    {% set flex_classes = 'flex flex-col height-100' %}
{% endif %}

{%
    set type, count, feedcount = content.field_external_rss_type['#items'].value,
    content.field_external_rss_items_to_disp.0['#markup'] - 1,
    content.rss|length - 1
%}

{% block paragraph %}
  <div{{ attributes.addClass(classes, flex_classes) }}>
  <div class="container">
      {% block content %}
        {# print this if type is campusgroup_img or athletics #}
				{% if type == 'newsroom_all_fields' or type == 'newsroom_no_image' or type == 'newsroom_title_and_date' or type == 'newsroom_no_description' or type == 'newsroom_homepage_news' %}
					{% if content.field_external_rss_title.0['#context'].value %}
						<h2 class='rss_section_title'>{{ content.field_external_rss_title.0['#context'].value }}</h2>
					{% endif %}
					<ul>
            {#  Type Name - Newsroom: All fields
                  Image, Title, Date, Description
                Type Name - Newsroom: No Image
                  Title, Date, Description
                Type Name - Newsroom: Title and Date
                  Title, Date
                <div class=“news-feed”>
                  <div class=“feed-img”>Image</div>
                  <div class=“feed-body”>
                      <div class=“feed-title”><a href=“LINK”>Title</a></div>
                      <div class=“feed-date”>Date</div>
                      <div class=“feed-descr”>Description</div>
                  </div>
                </div>
            #}
						{% for i in 0..min(count, feedcount) %}
							<li>
                <div class="news-feed{% if type == 'newsroom_homepage_news' %} in-the-news-feed{% endif %}">
                  {% if type == 'newsroom_homepage_news' %}
                    {# Special handling for homepage news #}
                    {% if content.rss[i].img %}
                      <img class="feed-img" src="{{ content.rss[i].img }}" alt="{{ content.rss[i].imgAlt }}">
                    {% else %}
                      <div class="feed-img-placeholder">No Image</div>
                    {% endif %}

                    <div class="feed-descr">{{ content.rss[i].description }}</div>
                    <div class="feed-title">
                      <a href="{{ content.rss[i].link }}">{{ content.rss[i].title }}</a>
                    </div>
                  {% else %}
                    {# Standard newsroom feed display #}
                    {% if type in ['newsroom_all_fields', 'newsroom_no_description'] %}
                      {% if content.rss[i].img %}
                        <img class="feed-img" src="{{ content.rss[i].img }}" alt="{{ content.rss[i].imgAlt }}">
                      {% else %}
                        <div>No Image</div>
                      {% endif %}
                    {% endif %}

                    <div class="feed-body">
                      <div class="feed-title"><a href="{{ content.rss[i].link }}">{{ content.rss[i].title }}</a></div>
                      <div class="feed-date">{{ content.rss[i].pubDate }}</div>
                      {% if type not in ['newsroom_title_and_date', 'newsroom_no_description'] %}
                        <div class="feed-descr">{{ content.rss[i].description }}</div>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
							</li>
						{% endfor %}
					</ul>
				{# print button if it has values #}
				{% if content.field_external_rss_button.0['#title'] %}
					{% if content.field_external_rss_button.0['#url'].uri is not defined %}
						{{ link(content.field_external_rss_button.0['#title'],
                          content.field_external_rss_button.0['#url'].uri,
                          { 'class':['btn', 'blue'], 'target':['_blank']} )
                      }}
					{% else %}
						<div class={{ content.is_sidebar_content ? 'field--name-field-aside-button' : 'field--name-field-subfeature-link' }}>
							<a href={{content.field_external_rss_button.0['#url_title']}}>{{content.field_external_rss_button.0['#title']}}<span class="arrow-right"></span>
							</a>
						</div>
					{% endif %}
				{% endif %}
			{% else %}
          {% if content.field_external_rss_news_type['#items'].value is null or content.field_external_rss_news_type['#items'].value == 'events' %}
              <div class="events-head">
              {# print sectional title if set #}
              {% if content.field_external_rss_title.0['#context'].value %}
                <h2 class='rss_section_title'>{{ content.field_external_rss_title.0['#context'].value }}</h2>
              {% endif %}
              </div>
                 
              {# print this if type is gcal #}
              {% if type == 'gcal' %}
                {% if content.field_external_rss_gcal['#is_multiple'] == FALSE %}
                <div class='gCalFlow flex-1' data-gcalid="{{ content.field_external_rss_gcal.0['#context'].value }}" data-amount="{{ content.field_external_rss_items_to_disp.0['#markup'] }}">
                  <div class='gcf-item-container-block'>
                    <div class='gcf-item-block'>
                      <div class='gcf-item-header-block'>
                        <div class='gcf-item-date-block'>
                          <div class='gcf-item-daterange'>
                          </div>
                        </div>
                        <div class='gcf-item-title-block'>
                          <div class='gcf-item-title'></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <script type="text/javascript" src="https://code.jquery.com/jquery-2.2.4.min.js">
              </script>
              <script type='text/javascript'>
                var jQuery_2_2_4 = jQuery.noConflict();
              </script>
              <script>
                (function ($) {
                  $(document).on('ready', function(){
                    $('.gCalFlow').each(function ( index ) {
                      var gcalid = $(this).data('gcalid'), amount = $(this).data('amount');
                      $(this).gCalFlow({
                        calid: gcalid,
                        maxitem: amount,
                        no_items_html: '<p class="no-events">no events found...</p>',
                        apikey: 'AIzaSyCd-P9Id38F0PXecOoAw59iUYRkzcA5MNY', //From Cheng's Google API account, the Google Calendar API has a courtesy limit of 1,000,000 queries per day.
                      });
                    });
                  });
                })(jQuery_2_2_4);
              </script>
              <script type="text/javascript" src="https://case.edu/js/drupal/globalize.min.js"></script>
              <script type="text/javascript" src="https://case.edu/js/drupal/jquery.gcal_flow.js"></script>
              {% else %} {# multiple google calendar check #}
                {{ content.rss }}
              {% endif %}
							{% if content.field_external_rss_button.0['#url'].uri is not defined %}
								{{ link(content.field_external_rss_button.0['#title'],
                                content.field_external_rss_button.0['#url'].uri,
                                { 'class':['btn', 'blue'], 'target':['_blank']} )
                            }}
							{% else %}
								<div class={{ content.is_sidebar_content ? 'field--name-field-aside-button' : 'field--name-field-subfeature-link' }}>
									<a href={{content.field_external_rss_button.0['#url_title']}}>{{content.field_external_rss_button.0['#title']}}<span class="arrow-right"></span>
									</a>
								</div>
							{% endif %}
            {% endif %}
              {# print this if type is theDaily or mailchimp or Campus Groups #}
              {% if (type == 'd8' or type == 'daily' or type == 'mailchimp' or type == 'learningstream' or type == 'rawrss' or type == 'tb_cg' or type == 'rawrssjobs' or type == 'campus_groups') %}
                {% if content.rss is null %}
                  <p class='m-20'>No data available at this time...</p>
                {% else %}
                  <div class='feed flex-1'>
                    <ul>
                        {% for i in 0..min(count, feedcount) %}
                              {% if content.rss[i].eventmonth and content.rss[i].eventday %}
                                <li class='feed-item-block flex feed-events-date'>
                                <div class="feed-item-daterange-container">
                                  <div class='feed-item-daterange feed-me'>
                                      <span class='month'>{{ content.rss[i].eventmonth }}</span>
                                      <span class='day'>{{ content.rss[i].eventday }}</span>
                                  </div>
                              {% else %}
                                <li class='feed-item-block flex feed-news-date'>
                                <div class="feed-item-daterange-container">
                                {% if type == 'd8' %}
                                  <div class='feed-item-daterange'>
                                      {{ content.rss[i]['timestamp']|date("F d, o") }}
                                  </div>
                                {% else %}
                                  <div class='feed-item-daterange'>
                                      <span class='month'>{{ content.rss[i].month }}</span>
                                      <span class='day'>{{ content.rss[i].day }}</span>
                                  </div>
                                {% endif %}
                              {% endif %}
                            </div>
                            <div class="feed-item-title-container">
                              {% if content.rss[i].eventtype and type == 'tb_cg' %}
                                <div class='event-type'>
                                  <p>{{ content.rss[i].eventtype }}</p>
                                </div>
                              {% endif %}
                              <div class="feed-item-title">
                                <a hreflang="en" href={{ content.rss[i].link }}>
                                  {% if content.rss.campusgroups_specialhandling is defined %}
                                    {% if content.rss.campusgroups_specialhandling == 'ISO-8859-1' %}
                                      {{ content.rss[i].title|convert_encoding('ISO-8859-1','UTF-8') }}
                                    {% endif %}
                                  {% else %}
                                    {{ content.rss[i].title }}
                                  {% endif %}
                                </a>
                              </div>
                                {% if type == 'campus_groups' %}
                                  <div class='feed-item-time'>
                                    {{ content.rss[i]['eventtime'] }}
                                  </div>
                               {% endif %}
                            </div>
                          </li>
                        {% endfor %}
                    </ul>
                  </div>
                        {# print button if it has values #}
                    {% if content.field_external_rss_button.0['#title'] %}
                        {% if content.field_external_rss_button.0['#url'].uri is not defined %}
                            {{ link(content.field_external_rss_button.0['#title'],
                                content.field_external_rss_button.0['#url'].uri,
                                { 'class':['btn', 'blue'], 'target':['_blank']} )
                            }}
                        {% else %}
                          <div class={{ content.is_sidebar_content ? 'field--name-field-aside-button' : 'field--name-field-subfeature-link' }}>
                            <a href={{content.field_external_rss_button.0['#url_title']}}>{{content.field_external_rss_button.0['#title']}}<span class="arrow-right"></span></a>
                          </div>
                        {% endif %}
                      {% endif %}
                {% endif %}
              {% endif %}


          {% elseif content.field_external_rss_news_type['#items'].value is defined and content.field_external_rss_news_type['#items'].value == 'news' %}
            <div class='feed-news'>{{ content.rss }}</div>
          {% elseif content.field_external_rss_news_type['#items'].value is defined and content.field_external_rss_news_type['#items'].value == 'mixed' %}
            <div class='feed-mixed'>{{ content.rss }}</div>
          {% elseif content.field_external_rss_news_type['#items'].value is defined and content.field_external_rss_news_type['#items'].value == 'full_news' %}
            <div class='feed-full-news'>{{ content.rss }}</div>
          {% endif %}

        {% endif %}
      {% endblock %}

  </div>
</div>
{% endblock paragraph %}
