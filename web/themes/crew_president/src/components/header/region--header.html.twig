{{ attach_library('crew_president/header') }}
{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% if content %}
  <div{{ attributes.addClass('region--header') }}>
    <div class="container flex-row justify-between header-container">
      {{ content }}
      {% include '@crew_president/src/components/search/search.twig' %}
    </div>
  </div>
{% endif %}
